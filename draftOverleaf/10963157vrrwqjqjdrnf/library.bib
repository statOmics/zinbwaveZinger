journal = {BMC bioinformatics},
pages = {323},
pmid = {21816040},
title = {{RSEM: accurate transcript quantification from RNA-Seq data with or without a reference genome.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/21816040 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC3163565},
volume = {12},
year = {2011}
}
@article{Irizarry2003,

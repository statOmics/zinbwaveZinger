file = {:Users/koenvandenberge/Library/Application Support/Mendeley Desktop/Downloaded/Audit et al. - 2004 - Wavelet Analysis of DNA Bending Profiles reveals Structural Constraints on the Evolution of Genomic Sequences.pdf:pdf},
issn = {0092-0606},
journal = {Journal of biological physics},
month = {mar},
number = {1},
pages = {33--81},
pmid = {23345861},
title = {{Wavelet Analysis of DNA Bending Profiles reveals Structural Constraints on the Evolution of Genomic Sequences.}},
